{
  "manifest_version": 3,
  "name": "Tree-Style Tabs",
  "version": "1.0",
  "description": "Organize your browser tabs in a hierarchical tree structure.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "sidebar/sidebar.html",
    "default_icon": {
      "16": "assets/default-icon.png",
      "48": "assets/default-icon.png",
      "128": "assets/default-icon.png"
    }
  },
  "icons": {
    "16": "assets/default-icon.png",
    "48": "assets/default-icon.png",
    "128": "assets/default-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
